[Unit]
Description=Schedules the work to be done by the gustave-jobs service
After=gustave-jobs.service
PartOf=gustave.target

[Service]
User=gustave
Environment="FLASK_CONFIG=ProductionConfig"
Environment="PYTHONPATH=${PYTHONPATH}:/usr/local/gustave"
WorkingDirectory=/etc/gustave/
ExecStart=celery -A entry:app beat --loglevel=info
Restart=always
RestartSec=5s
StandardOutput=append:/var/log/gustave.log
StandardError=append:/var/log/gustave.log
